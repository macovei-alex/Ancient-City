#version 330layout (location = 0) in vec3 InPosition;layout (location = 1) in vec3 InNormal;layout (location = 2) in vec2 InTexCoords;layout (location = 0) out vec3 MidNormal;layout (location = 1) out vec2 MidTexCoords;uniform mat4 ProjectionMatrix;uniform mat4 ViewMatrix;uniform mat4 ModelMatrix;void main(){    gl_Position = ProjectionMatrix * ViewMatrix * ModelMatrix * vec4(InPosition, 1.0);    MidNormal = InNormal;    MidTexCoords = InTexCoords;}